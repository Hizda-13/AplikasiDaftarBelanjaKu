<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow -->
    <item
        android:left="1dp"
        android:top="2dp"
        android:right="1dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#33000000" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Main background -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#4CAF50" />
            <solid android:color="#FFFFFF" />
            <corners android:radius="10dp" />
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp" />
        </shape>
    </item>

</layer-list>